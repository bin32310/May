<?xml version="1.0" encoding="UTF-8"?>
<!-- AdminMapper.xml -->

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.may.mapper.AdminMapper">


  
	<!-- 회원 목록 -->
	<select id="userList" resultType="UserVO">
	SELECT /* userList */
		US_ID, US_NAME, US_NICKNAME, US_STATE, US_JOIN_DATE, US_OUT_DATE
	FROM
		US
	ORDER BY
		US_JOIN_DATE DESC
	LIMIT
		#{pageStart}, #{pageSize}
	</select>
	
	<!-- 전체 회원 수 조회 -->
	<select id="userCount" resultType="int">
		SELECT /* userCount */
			COUNT(*)
		FROM
			US
	</select>
	
	<!-- 글 목록 -->
	<select id="boardList" resultType="BoardVO">
		SELECT /* boardList */
			*
		FROM
			BOARD
		ORDER BY
			BO_NUM DESC   
		LIMIT
			#{pageStart},#{pageSize} 
	</select> 
	
	<!-- 전체 글 수 조회 -->
	<select id="boardCount" resultType="int">
		SELECT /* boardCount */
			COUNT(*)
		FROM
			BOARD
	</select>
	  
  
  
  
</mapper>